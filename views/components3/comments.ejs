<button data-type="default" class="w-20 -ml-8 text-3xl"><i class="fa-solid fa-caret-left"></i></button>
                      <h1 class="font-mono text-2xl text-black">Comments</h1>
                      <div class="h-full w-full">

                        <div id="c-feild" class="w-full mb-4 h-80 shadow-xl-b p-2 overflow-y-scroll [&::-webkit-scrollbar]:hidden [-ms-overflow-style:none] [scrollbar-width:none]">
                            <% for (let post of data) { %>
                           <div id="cmt-card" class="h-auto w-full p-2 rounded-sm shadow-xl flex flex-col items-center justify-center gap-4">
                            <div class="flex items-center  h-12 w-full gap-2">
                                <div id="logo" class="h-10 w-10 rounded-full bg-black"></div>
                                
                                <div id="username" class="text-sm"><%= post.username %></div>
                            </div>
                            <div class="h-auto w-full">
                                <p class="text-sm"><%= post.content %></p>
                            </div>
                           </div>
                           <% } %>

                        </div>

                        <div id="c-input" data-cmt class="w-full h-30 text-black flex justify-center items-center bg-white shadow-xl cmt-input">
                            <textarea
                            name="comment"
                            data-cmt-input
                            placeholder="write your opinion"
                            class="min-h-[7rem] w-full p-4 rounded-lg resize-none outline-none overflow-y-scroll [&::-webkit-scrollbar]:hidden [-ms-overflow-style:none] [scrollbar-width:none] cmt-input"
                            ></textarea>
                            <i class="fa-solid fa-arrow-up text-3xl" data-send-btn></i>
                        </div>
                      </div>